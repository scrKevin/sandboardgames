<style>

body
{
  background-color: #000a0f;
  background-image: url("/img/cah/crissxcross.png");
}

.scaleplane
{
  position: absolute;
  top: 0px;
  left: 0px;
  transform-origin: 0 0;
}

.cursor
{
  position: absolute;
  left: 20000px;
  top: 0px;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  border: 1px solid black;
  z-index: 1000;
}

.playerbox
{
  position: absolute;
  z-index: 1;
}

.webcambox
{
  position: relative;
  padding: 8px;
  border-radius: 6px;
  background-color: #cccccc;
  border: 1px solid black;
  -webkit-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
  box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
}

.webcamContainer
{
  transform-origin: 50% 0
}

.webcamContainer video
{
  height: 240px;
}


.card
{
  position: absolute;
  z-index: 2;
}

.deck
{
  background-color: grey;
  width: 160px;
  height: 180px;
}

.playcard
{
  transform-origin: 0 0;
  transform: scale(0.65);
}


.moveBtn
{
  z-index: 2000;
  padding: 8px;
  border: 1px solid black;
  border-radius: 6px;
  background-color: white;
  top: -5px;
  -webkit-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
  box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
}

.gamecard
{
  position: absolute;
  padding-left: 32px;
}

.openbox
{
  position: fixed;
  border: 5px solid #77ff77;
}

</style>